<dialogs:CustomDialog x:Class="Hearthstone_Deck_Tracker.Windows.DeckTypeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" Title="选择卡组类型" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Margin="0,20,0,0">
            <RadioButton Name="RadioButtonConstructed" Content="构筑" IsChecked="True" FontSize="16"/>
            <RadioButton Name="RadioButtonArena" Content="竞技场" FontSize="16"/>
            <RadioButton Name="RadioButtonBrawl" Content="乱斗" FontSize="16"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="210" Margin="0,30,0,20" HorizontalAlignment="Right">
            <Button Name="BtnOk" Height="37" Width="90" Style="{DynamicResource AccentedSquareButtonStyle}" Click="BtnOk_OnClick">
                <TextBlock Text="创建卡组"/>
            </Button>
            <Button Name="BtnCancel" Content="取消" Height="37" Width="90" Margin="15,0,0,0" Click="BtnCancel_OnClick"/>
        </StackPanel>
        
    </StackPanel>
</dialogs:CustomDialog>

