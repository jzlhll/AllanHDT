<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.OptionsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:options="clr-namespace:Hearthstone_Deck_Tracker.FlyoutControls.Options"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Border Margin="5,5,0,5" BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}">
            <DockPanel>
                <Border DockPanel.Dock="Bottom" Margin="-1,0,-1,-1" BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}">
                    <CheckBox Content="高级选项" Margin="5" IsChecked="{Binding Show, Source={x:Static options:AdvancedOptions.Instance}}"/>
                </Border>
                <TreeView Name="TreeViewOptions" Width="150">
                    <TreeViewItem Name="TreeViewItemSearch" Header="搜索" Selected="TreeViewItemSearch_OnSelected"></TreeViewItem>
                    <TreeViewItem Header="界面">
                        <TreeViewItem Name="TreeViewItemOverlayGeneral" Header="一般" Selected="TreeViewItemGeneralOverlay_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemOverlayDeckWindows" Header="卡组界面" Selected="TreeViewItemOverlayDeckWindows_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemOverlayPlayer" Header="玩家" Selected="TreeViewItemOverlayPlayer_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemOverlayOpponent" Header="对手" Selected="TreeViewItemOverlayOpponent_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemOverlayInteractivity" Header="互动" Selected="TreeViewItemOverlayInteractivity_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemOverlayStreaming" Header="媒体" Selected="TreeViewItemOverlayStreaming_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                    </TreeViewItem>
                    <TreeViewItem Header="跟踪">
                        <TreeViewItem Name="TreeViewItemTrackerGeneral" Header="一般" Selected="TreeViewItemTrackerGeneral_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerStats" Header="统计" Selected="TreeViewItemTrackerStats_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerExporting" Header="导出" Selected="TreeViewItemTrackerExporting_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemTrackerImporting" Header="导入" Selected="TreeViewItemTrackerImporting_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemTrackerNotifications" Header="通知" Selected="TreeViewItemTrackerNotifications_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerPlugins" Header="插件" Selected="TreeViewItemTrackerPlugins_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerHotKeys" Header="热键" Selected="TreeViewItemTrackerHotKeys_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemTrackerBackups" Header="备份" Selected="TreeViewItemTrackerBackups_OnSelected" Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}" Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}"/>
                        <TreeViewItem Name="TreeViewItemTrackerAppearance" Header="外观" Selected="TreeViewItemTrackerAppearance_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerSettings" Header="设置" Selected="TreeViewItemTrackerSettings_OnSelected"/>
                        <TreeViewItem Name="TreeViewItemTrackerLogging" Header="Logging" Selected="TreeViewItemTrackerLogging_OnSelected" Visibility="Collapsed"/>
                    </TreeViewItem>
                </TreeView>
            </DockPanel>
        </Border>
        <ContentControl Name="ContentControlOptions" Margin="-6,0,0,0"/>
    </DockPanel>
</UserControl>
